{
    "description": "switch language with one button",
    "manipulators": [
        {
            "from": {
                "key_code": "slash"
            },
            "to": [
                {
                    "select_input_source": {
                        "language": "ru"
                    }
                },
                {
                    "set_variable": {
                        "name": "workman",
                        "value": 0
                    }
                }
            ],
            "type": "basic"
        },
        {
            "from": {
                "key_code": "grave_accent_and_tilde"
            },
            "to": [
                {
                    "select_input_source": {
                        "language": "en"
                    }
                },
                {
                    "set_variable": {
                        "name": "workman",
                        "value": 0
                    }
                }
            ],
            "type": "basic"
        },
        {
            "from": {
                "key_code": "equal_sign"
            },
            "to": [
                {
                    "select_input_source": {
                        "language": "en"
                    }
                },
                {
                    "set_variable": {
                        "name": "workman",
                        "value": 1
                    }
                }
            ],
            "type": "basic"
        }
    ]
}